<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/y40"
    android:orientation="vertical"
    >
    <View
        android:layout_width="fill_parent"
        android:layout_height="0.100000024dip"
        android:background="#ff898989" />

    <LinearLayout
        android:id="@id/linear"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/y40"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_marginLeft="14.0dip"
            android:layout_marginRight="14.0dip"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@id/linear_article_detail_like"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@drawable/rec_shape_trans_grey_clickable"
                android:gravity="center"
                android:orientation="vertical">

                <ToggleButton
                    android:id="@id/toggleButton_like"
                    android:layout_width="20.0dip"
                    android:layout_height="17.0dip"
                    android:background="@drawable/toggle_button_like"
                    android:clickable="false"
                    android:textOff=""
                    android:textOn="" />

                <TextView
                    android:id="@id/textView_article_detail_like_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1.0dip"
                    android:text="喜欢(0)"
                    android:textColor="#ff9099a7"
                    android:textSize="10.0sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@id/linear_article_detail_review"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@drawable/rec_shape_trans_grey_clickable"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@id/imageButton_review"
                    android:layout_width="20.0dip"
                    android:layout_height="17.0dip"
                    android:scaleType="centerInside"
                    android:src="@drawable/review_button" />

                <TextView
                    android:id="@id/textView_article_detail_comment_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1.0dip"
                    android:text="评论(0)"
                    android:textColor="#ff9099a7"
                    android:textSize="10.0sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@id/linear_article_detail_share"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@drawable/rec_shape_trans_grey_clickable"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@id/imageButton_share"
                    android:layout_width="20.0dip"
                    android:layout_height="17.0dip"
                    android:scaleType="centerInside"
                    android:src="@drawable/share" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1.0dip"
                    android:text="分享"
                    android:textColor="#ff9099a7"
                    android:textSize="10.0sp" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@id/button_thing_link"
            android:layout_width="0.0dip"
            android:layout_height="32.0dip"
            android:layout_marginRight="16.0dip"
            android:layout_weight="1.0"
            android:background="@drawable/rec_shape_rounded_purple_grey_clickable"
            android:text="@string/button_text_check_thing"
            android:textColor="@color/white"
            android:visibility="gone" />

    </LinearLayout>
</LinearLayout>