<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10.0dip">

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:background="#ffe6e6e6"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>

    <com.facebook.drawee.view.SimpleDraweeView
        xmlns:fresco="http://schemas.android.com/apk/res-auto"
        android:id="@id/img_reviews_item_avatar"
        android:layout_width="34.0dip"
        android:layout_height="34.0dip"
        android:layout_marginLeft="15.0dip"
        android:layout_marginRight="10.0dip"
        android:layout_marginTop="20.0dip"
        fresco:roundAsCircle="true"
        android:src="@drawable/llist_img_default_avatar" />

    <TextView
        android:id="@id/tv_reviews_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/img_reviews_item_avatar"
        android:layout_toRightOf="@id/img_reviews_item_avatar"
        android:ellipsize="end"
        android:maxLines="1"
        android:maxWidth="150.0dip"
        android:text="UserName"
        android:textColor="@color/theme_color_text_balck"
        android:textSize="14.0sp" />

    <RatingBar
        android:id="@id/ratingbar_reviews_item_score"
        style="@style/fiveStarRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_reviews_item_name"
        android:layout_marginLeft="10.0dip"
        android:layout_toRightOf="@id/tv_reviews_item_name"
        android:isIndicator="true" />


    <TextView
        android:id="@id/tv_reviews_item_like_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_reviews_item_name"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15.0dip"
        android:text="12"
        android:textColor="@color/text_purple"
        android:textSize="12.0sp" />

    <ImageView
        android:id="@id/img_reviews_item_like"
        android:layout_width="26.0dip"
        android:layout_height="24.0dip"
        android:layout_alignBottom="@id/tv_reviews_item_like_num"
        android:layout_toLeftOf="@id/tv_reviews_item_like_num"
        android:paddingLeft="5.0dip"
        android:paddingRight="5.0dip"
        android:paddingTop="8.0dip"
        android:src="@drawable/thumb_up" />
    <TextView
        android:id="@id/tv_reviews_item_comment_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_reviews_item_like_num"
        android:layout_toLeftOf="@id/img_reviews_item_like"
        android:layout_marginRight="15.0dip"
        android:text="12"
        android:textColor="@color/text_purple"
        android:textSize="12.0sp" />

    <ImageView
        android:id="@id/img_reviews_item_comment"
        android:layout_width="26.0dip"
        android:layout_height="24.0dip"
        android:layout_alignBottom="@id/tv_reviews_item_like_num"
        android:layout_toLeftOf="@id/tv_reviews_item_comment_num"
        android:paddingLeft="5.0dip"
        android:paddingRight="5.0dip"
        android:paddingTop="8.0dip"
        android:src="@drawable/icon_comment_num" />
    <TextView
        android:id="@id/tv_reviews_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_reviews_item_name"
        android:layout_below="@id/tv_reviews_item_name"
        android:layout_marginTop="2.0dip"
        android:text="09/14 10:20"
        android:textColor="@color/text_gray"
        android:textSize="10.0sp" />

    <TextView
        android:id="@id/tv_reviews_item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_reviews_item_avatar"
        android:layout_marginLeft="15.0dip"
        android:layout_marginRight="15.0dip"
        android:layout_marginTop="14.0dip"
        android:ellipsize="end"
        android:maxLines="3"
        android:text="lll"
        android:textColor="@color/theme_color_text_content_gray"
        android:textSize="14.0sp" />


</RelativeLayout>