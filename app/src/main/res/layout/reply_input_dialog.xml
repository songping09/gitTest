<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/relativeLayout_reply_bar"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/transparent_grey"
    android:visibility="gone">

    <RelativeLayout
        android:id="@id/rela_temp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:gravity="bottom"
        android:padding="14.0dip">

        <EditText
            android:id="@id/editText_reply"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="start"
            android:hint="@string/text_input_reply"
            android:lines="3"
            android:textColor="#ff333333"
            android:textColorHint="#ffd3d3d3"
            android:textSize="14.0sp" />

        <TextView
            android:id="@id/textView_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/editText_reply"
            android:layout_marginTop="7.0dip"
            android:background="@drawable/bg_reply_text"
            android:enabled="false"
            android:gravity="center"
            android:paddingBottom="5.0dip"
            android:paddingLeft="13.0dip"
            android:paddingRight="13.0dip"
            android:paddingTop="5.0dip"
            android:text="发布"
            android:textColor="@color/color_reply_text"
            android:textSize="14.0sp" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:layout_above="@id/rela_temp"
        android:background="#ffcdd0d6" />
</RelativeLayout>