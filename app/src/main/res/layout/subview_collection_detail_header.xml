<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <com.facebook.drawee.view.SimpleDraweeView xmlns:fresco="http://schemas.android.com/apk/res-auto"
        android:id="@id/imageView_collection_detail_top_image"
        android:layout_width="fill_parent"
        android:layout_height="202.0dip"
        android:scaleType="centerCrop"
        fresco:placeholderImage="@drawable/loading_placeholder"
        fresco:placeholderImageScaleType="fitCenter"
        fresco:fadeDuration="1500"/>

    <TextView
        android:id="@id/tag_view"
        android:layout_width="44.0dip"
        android:layout_height="30.0dip"
        android:layout_marginLeft="20.0dip"
        android:layout_marginTop="10.0dip"
        android:background="@drawable/main_item_bg_tag"
        android:gravity="center"
        android:paddingBottom="3.0dip"
        android:paddingLeft="10.0dip"
        android:paddingRight="10.0dip"
        android:paddingTop="3.0dip"
        android:text="专题"
        android:textColor="#ff4a4a4a"
        android:textSize="10.0sp" />

    <TextView
        android:id="@id/textView_collection_detail_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView_collection_detail_top_image"
        android:layout_margin="14.0dip"
        android:textColor="#ff434343"
        android:textSize="21.0sp" />

    <TextView
        android:id="@id/textView_collection_detail_subtitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_collection_detail_title"
        android:layout_marginBottom="15.0dip"
        android:layout_marginLeft="15.0dip"
        android:layout_marginRight="15.0dip"
        android:layout_marginTop="-4.0dip"
        android:textColor="#ff606366"
        android:textSize="14.0sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.5dip"
        android:layout_below="@id/textView_collection_detail_subtitle"
        android:background="@drawable/comment_dash_line"
        android:layerType="software" />
</RelativeLayout>